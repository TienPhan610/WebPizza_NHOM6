@model FoodShopOnline.Models.ForgotPassword

@{
    /**/

    ViewBag.Title = "ForgotPasword";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <link rel="stylesheet" type="text/css" href="\content\client\dndkv2.css" />
    <div class="dkdnpage">
        <div class="form-horizontal">
            <hr />
            <div class="form-group">
                <p>Lấy lại mật khẩu</p>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "fas fa-envelope" })
                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control", style = "height:50px;" } })
                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                <input type="submit" value="Lấy lại mật khẩu" />
            </div>

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        </div>
    </div>
}
