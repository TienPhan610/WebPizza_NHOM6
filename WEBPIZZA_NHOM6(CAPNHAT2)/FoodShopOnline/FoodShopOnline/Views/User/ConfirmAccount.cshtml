
@{
    ViewBag.Title = "ConfirmAccount";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@if (TempData["DangKyMess"] != null)
{
    <script type="text/javascript">
            window.onload = function () {
                @Html.Raw(TempData["DangKyMess"]);
            };
    </script>
}

<section class="section-content padding-y">

    <!-- ============================ COMPONENT REGISTER   ================================= -->
    <div class="card mx-auto" style="max-width:520px; margin-top:40px;">
        <article class="card-body">
            <header class="mb-4"><h4 class="card-title">Nhập mã xác thực</h4></header>

            @using (Html.BeginForm("ConfirmAccount", "User", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group"style="width:500px; height:150px;">
                    <input type="text" name="confirmKey" class="form-control" />
                </div> <!-- form-group end.// -->
                <div class="form-group" >
                    <button type="submit" style="width:500px; height:40px" class="btn btn-primary btn-block">Xác thực</button>
                </div> <!-- form-group// -->
            }
        </article>
    </div>
</section>