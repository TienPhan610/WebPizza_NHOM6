@model List<FoodShopOnline.Models.CartItem>
@{
    ViewBag.Title = "Thanh toan";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="content">
    <div class="section group">
        @if (Model.Count > 0)
        {
            <table class="table">
                <thead>
                    <tr>
                        <td>Mã SP</td>
                        <td>Tên SP</td>
                        <td>Ảnh SP</td>
                        <td>Số lượng</td>
                        <td>Đơn giá</td>
                        <td>Thành tiền</td>
                        <td></td>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Product.ID</td>
                            <td>@item.Product.Name</td>
                            <td><img src="@item.Product.Image" width="100" /></td>
                            <td><input type="text" class="txtQuantity" data-id="@item.Product.ID" value="@item.Quantity" /></td>
                            <td>@item.Product.Price.ToString("N0")</td>
                            <td>@((item.Product.Price * item.Quantity).ToString("N0"))</td>
                            <td><a href="#" class="btn-delete" data-id="@item.Product.ID">Xóa</a></td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>
    <div class="section group">
        @using (Html.BeginForm("Payment", "Cart", FormMethod.Post))
        {
            <div class="form-group">
                <label class = "fa fa-user" style="font-size: 15px"> Họ Và Tên</label>
                <input name="CustomerName" type="text" class="form-group" style="font-size: 15px"/>
            </div>
            <div class="form-group">
                <label style="font-size: 15px" class="fas fa-home"> Địa Chỉ</label>
                <input name="CustomerAddress" class="form-group" style="font-size: 15px"/>
            </div>
            <div class="form-group">
                <label style="font-size: 15px" class="fas fa-envelope"> Email</label>
                <input name="CustomerEmail" class="form-group" style="font-size: 15px" />
            </div>
            <div class="form-group">
                <label style="font-size: 15px" class="fas fa-phone"> Điện thoại</label>
                <input name="CustomerMobie" class="form-group" style="font-size: 15px"/>
            </div>
            <button type="submit"class="btn" style="font-size: 15px">Thanh Toán</button>
        }
    </div>
</div>
