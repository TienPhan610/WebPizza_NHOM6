@model FoodShopOnline.Models.Feedback
@{
    ViewBag.Title = "CuaHang";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <link rel="stylesheet" type="text/css" href="\content\client\dndkv2.css" />
    <div class="dkdnpage">
        <div class="form-horizontal">
            <hr />
            <div class="form-group">
                <p>Phản hồi khách hàng</p>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.fb, htmlAttributes: new { @class = "fas fa-envelope" })
                @Html.EditorFor(model => model.fb, new { htmlAttributes = new { @class = "form-control", style = "height:200px;" } })
                @Html.ValidationMessageFor(model => model.fb, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                <input type="submit" value="Gửi ý kiến" />
            </div>
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        </div>
    </div>
}
