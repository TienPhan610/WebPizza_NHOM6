@model List<Model.EnityFramework.Product>
@{
    ViewBag.Title = "Trang chủ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div id="myCarousel" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner">
        <div class="item active">
            <img src="\content\client\images\KM\km1.jpg" style="width:100%">

        </div>
        <div class="item">
            <img src="\content\client\images\KM\km2.png" style="width:100%">
        </div>

        <div class="item">
            <img src="\content\client\images\KM\km3.png" style="width:100%">
        </div>
    </div>
    <a class="left carousel-control" href="#myCarousel" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right"></span>
        <span class="sr-only">Next</span>
    </a>
</div>
<a name="pizza1"> </a>
<div class="pizza">


    <br />

    <p> PIZZA &nbsp; &nbsp; &nbsp; </p>
    @using (Html.BeginForm("Index", "Home", FormMethod.Get))
    {

        <select name="sort" id="sort">
            <option value="sort">Sắp xếp</option>
            <option value="1">Giá tăng dần</option>
            <option value="-1">Giá giảm dần</option>
        </select>
        <button type="submit"><i class="fas fa-search fa-2x"></i></button>

    }
    <hr>
    @foreach (var item in ViewBag.monan)
    {
        if (item.CategoryID == 1)
        {
            <div class="responsive">
                <div class="gallery">
                    <a href="@Url.Action("MonAn", "ProductDetails", new { id = item.ID })"><img src="@item.Image"></a>
                    <div class="desc">@item.Name</div>
                    <div class="info">@item.Description</div>
                    <div class="gia">@item.Price</div>
                    <div class="add-actions">
                        <ul class="add-actions-link" style="background-color: darkgray">
                            <li class="add-cart active" style="font-size: 40px"><a href="/Cart/AddItem?productId=@item.ID&quantity=1" style="font-size: 15px; text-align: center"> THÊM VÀO GIỎ HÀNG</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        }
    }
    <div class="clearfix"></div>
    <div style="padding:6px;"></div>
    <div class="stt">
        <ul class="pagination justify-content-center">
            <!--<li class="page-item disabled"><a class="page-link" href="javascript:void(0);">Pre</a></li>-->
            <li class="page-item active"><a class="page-link" href="/Home/Index">1</a></li>
            <li class="page-item"><a class="page-link" href="/Home/Pizza2">2</a></li>
            <li class="page-item"><a class="page-link" href="/Home/Pizza2">Next</a></li>
        </ul>
    </div>
</div>

